{
  "version": 2,
  "builds": [
    {
      "src": "backend/api_vercel.py",
      "use": "@vercel/python"
    },
    {
      "src": "backend/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/backend/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/api_vercel.py"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/api_vercel.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "VERCEL_DEPLOYMENT": "true"
  }
}
