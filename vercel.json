{
  "version": 2,
  "builds": [
    { "src": "backend/api/index.py", "use": "@vercel/python" },
    { "src": "frontend/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/static/:path*", "destination": "/frontend/:path*" },
    { "source": "/backend/api/v1/ingredients", "destination": "/backend/api/index.py" },
    { "source": "/backend/api/v1/ingredients/", "destination": "/backend/api/index.py" },
    { "source": "/backend/api/v1/:path*", "destination": "/backend/api/index.py" },
    { "source": "/backend/api/:path*", "destination": "/backend/api/index.py" },
    { "source": "/", "destination": "/frontend/simple.html" }
  ],
  "env": {
    "PYTHONPATH": ".",
    "VERCEL_DEPLOYMENT": "true"
  }
}
